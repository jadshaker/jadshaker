{
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 4
  },
  "[java]": { "editor.tabSize": 4 },
  "breadcrumbs.enabled": false,
  "cSpell.customDictionaries": {
    "custom-dictionary-user": {
      "name": "custom-dictionary-user",
      "path": "~/.cspell/custom-dictionary-user.txt",
      "addWords": true,
      "scope": "user"
    }
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "underline",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",
  "files.exclude": { "**/.git": false },
  "git.confirmSync": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true,
    "python": true,
    "cpp": true
  },
  "gitlens.defaultDateFormat": "dddd, MMMM D, YYYY",
  "gitlens.defaultDateShortFormat": "D-MMM-YY",
  "gitlens.defaultTimeFormat": "HH:mm",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "jupyter.askForKernelRestart": false,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "right"
  },
  "notebook.lineNumbers": "on",
  "notebook.output.textLineLimit": 10,
  "prettier.arrowParens": "avoid",
  "prettier.singleQuote": true,
  "python.insidersChannel": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
  "terminal.integrated.fontFamily": "monospace",
  "window.title": "${rootName}${separator}${dirty}${activeEditorShort}",
  "window.titleSeparator": " â†’ ",
  "workbench.editorAssociations": {
    "*.html": "default",
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.activityBar.visible": false,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "zenMode.hideLineNumbers": false
}
